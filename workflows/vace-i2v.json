{
  "1": {
    "class_type": "CheckpointLoaderSimple",
    "inputs": { "ckpt_name": "wan2.2-i2v.safetensors" },
    "_meta": { "title": "Load WAN 2.2 I2V (safetensors alias)" }
  },
  "2": {
    "class_type": "CLIPTextEncode",
    "inputs": { "clip": ["1", 1], "text": "POV movement, cinematic lighting, realistic motion, detailed scene" },
    "_meta": { "title": "Positive Prompt" }
  },
  "3": {
    "class_type": "CLIPTextEncode",
    "inputs": { "clip": ["1", 1], "text": "blurry, low quality, distorted, overexposed, static frame, artifacts" },
    "_meta": { "title": "Negative Prompt" }
  },
  "4": {
    "class_type": "VAELoader",
    "inputs": { "vae_name": "Wan2.1_VAE.pth" },
    "_meta": { "title": "Load VAE (Wan2.1_VAE.pth)" }
  },
  "5": {
    "class_type": "LoadImage",
    "inputs": { "image": "/workspace/workflows/assets/ref.jpg" },
    "_meta": { "title": "Reference Image (change path if needed)" }
  },
  "6": {
    "class_type": "WanVaceToVideo",
    "inputs": {
      "width": 640,
      "height": 640,
      "length": 300,
      "batch_size": 1,
      "strength": 1,
      "positive": ["2", 0],
      "negative": ["3", 0],
      "vae": ["4", 0],
      "reference_image": ["5", 0]
    },
    "_meta": { "title": "Wan VACE I2V â†’ latent video" }
  },
  "7": {
    "class_type": "ModelPatchTorchSettings",
    "inputs": { "enable_fp16_accumulation": true, "model": ["1", 0] },
    "_meta": { "title": "Model Torch Settings" }
  },
  "8": {
    "class_type": "ModelSamplingSD3",
    "inputs": { "shift": 8.0, "model": ["7", 0] },
    "_meta": { "title": "WAN/SD3 Sampling Adjust" }
  },
  "9": {
    "class_type": "KSampler",
    "inputs": {
      "seed": 42,
      "steps": 5,
      "cfg": 1,
      "sampler_name": "lcm",
      "scheduler": "simple",
      "denoise": 1,
      "model": ["8", 0],
      "positive": ["6", 0],
      "negative": ["6", 1],
      "latent_image": ["6", 2]
    },
    "_meta": { "title": "Denoise latent video" }
  },
  "10": {
    "class_type": "TrimVideoLatent",
    "inputs": { "trim_amount": ["6", 3], "samples": ["9", 0] },
    "_meta": { "title": "Trim Latent (from VACE)" }
  },
  "11": {
    "class_type": "VAEDecode",
    "inputs": { "samples": ["10", 0], "vae": ["4", 0] },
    "_meta": { "title": "Decode frames" }
  },
  "12": {
    "class_type": "CreateVideo",
    "inputs": { "fps": 30, "images": ["11", 0] },
    "_meta": { "title": "Assemble Video @30fps" }
  },
  "13": {
    "class_type": "SaveVideo",
    "inputs": { "filename_prefix": "video/i2v", "format": "auto", "codec": "auto", "video-preview": "", "video": ["12", 0] },
    "_meta": { "title": "Save Video" }
  }
}
